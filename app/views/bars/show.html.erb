<p style="color: green"><%= notice %></p>

<%= render @bar %>
  <h2>Liste des boissons :</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prix</th>
      </tr>
    </thead>
    <tbody>
      <% if @bar.drinks.any? %>
        <% @bar.drinks.each do |drink| %>
        <tr>
          <td><%= drink.name %></td>
          <td><%= drink.price %>â‚¬</td>
        </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="2">Aucune boisson</td>
        </tr>
      <% end %>
    </tbody>
  </table>    
  <%= link_to "Modifier ce bar", edit_bar_path(@bar), class:"btn btn-danger" %> |
  <%= link_to "Retourner voir les bars", bars_path %>

  <%= button_to "Supprimer ce bar", @bar, method: :delete %>
